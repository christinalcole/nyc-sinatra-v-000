<h1>Need to Make Changes to a Figure?</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="PATCH">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br></br>

  <label>Title:</label><br>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="<%= "title_#{title.id}" %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><br></br>
  <% end %>

  <label>Or create a new title: </label>
  <input type="text" name="title[name]" id="new_title"><br></br>

  <label>Landmark:</label><br>
  <% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= "landmark_#{landmark.id}" %>"<%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br></br>
  <% end %>

  <label>Or create a new landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark"><br></br>

  <input type="submit" value="Edit Figure">
</form>
